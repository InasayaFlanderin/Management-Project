<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="DEBUG">
    <Appenders>
        <!-- Console Appender - hiển thị trên màn hình -->
        <Console name="LogToConsole" target="SYSTEM_OUT">
            <PatternLayout pattern="%highlight{%d{yyyy-MM-dd HH:mm:ss.SSS} %-4level %logger{36}.%M() @%L - %msg%n}{ERROR=red, WARN=yellow, INFO=green, DEBUG=cyan}"/>
        </Console>
        
        <!-- File Appender - ghi vào file test.log -->
        <File name="LogToFile" fileName="logs/test.log" append="false">
            <ThresholdFilter level="DEBUG" onMatch="ACCEPT" onMismatch="DENY"/>
        </File>
    </Appenders>

    <Loggers>
        <!-- Logger cho package com.myteam -->
        <Logger name="name" level="debug" additivity="false">
            <AppenderRef ref="LogToConsole"/>
            <AppenderRef ref="LogToFile"/>
        </Logger>
        
        <!-- Root Logger -->
        <Root level="debug">
            <AppenderRef ref="LogToConsole"/>
            <AppenderRef ref="LogToFile"/>
        </Root>
    </Loggers>
</Configuration>